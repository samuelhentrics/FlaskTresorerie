{% extends 'base.html.jinja' %}
{% block title %}Simuler un emprunt{% endblock %}
{% block body %}
    <div class="row">
        <div class="col">
            <div class="card shadow">
                <div class="card-header">
                    <strong class="card-title">Résultat de la simulation</strong>
                </div>
                <div class="card-body">
                    <ul>
                        <li>Libellé : {{ libelle }}</li>
                        <li>Capital départ : {{ capitaldepart }}</li>
                        <li>Capital : {{ capital }}</li>
                        <li>Interet : {{ interet }}</li>
                        <li>Date début : {{ datedebut }}</li>
                        <li>Périodicité : {{ periodicite }}</li>
                        <li>Echeance : {{ echeance }}</li>
                        <li>Preteur : {{ preteur }}</li>
                    </ul>
                    <div class="col text-right">
                        <form action="{{ url_for('simulation_emprunt_result', libelle=libelle, capitaldepart=capitaldepart, tauxr=tauxr,
                               datedebut=datedebut, echeance=echeance, preteur=preteur, periodicite=periodicite) }}" method="post">
                        {{ form_validate.csrf_token }}
                        {{ form_validate.submit (class="btn btn-primary") }}
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
            <p class="mt-5 mb-3 text-muted text-center">Julen Elizalde et Samuel HENTRICS © 2021</p>
        </form>
    </div>
{% endblock body %}