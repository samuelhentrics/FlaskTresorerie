{% extends 'base.html.jinja' %}

{% block title %}Emprunts{% endblock %}

{% block body %}
    <div class="col-12">
        <div class="row align-items-center my-4">
            <div class="col">
                <h2 class="h3 mb-0 page-title">Liste des emprunts - {{ mois }} {{ annee }}</h2>
            </div>
        </div>
        <div class="row my-4">
            <div class="col-md-12">
                <div class="card shadow">
                    <div class="card-body">
                        <table class="table datatables" id="dataTable-1">
                            <thead>
                            <tr>
                                <th scope="col">Libelle</th>
                                <th scope="col">Capital</th>
                                <th scope="col">Interet</th>
                                <th scope="col">Début</th>
                                <th scope="col">Periodicité</th>
                                <th scope="col">Echeance</th>
                                <th scope="col">Preteur</th>
                                <th scope="col">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for emprunt in emprunts %}
                                <tr>
                                    <td>{{ emprunt['libelle'] }}</td>
                                    <td>{{ emprunt['capital'] }}</td>
                                    <td>{{ emprunt['interet'] }}</td>
                                    <td>{{ emprunt['date'] }}</td>
                                    <td>{{ emprunt['periodicite'] }}</td>
                                    <td>{{ emprunt['restant'] }}/{{ emprunt['echeance'] }}</td>
                                    <td>{{ emprunt['preteur'] }}</td>
                                    <td>
                                        <div class="dropdown">
                                            <button class="btn btn-sm dropdown-toggle" type="button" id="dr1"
                                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <span class="text-muted sr-only">Action</span>
                                            </button>
                                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dr1">
                                                <a class="dropdown-item" href="#">Modifier</a>
                                                <a class="dropdown-item" href="#">Supprimer</a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}