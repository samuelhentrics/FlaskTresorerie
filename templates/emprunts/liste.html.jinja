{% extends 'base.html.jinja' %}

{% block title %}Liste des emprunts{% endblock %}

{% block body %}
    <div class="col-12">
        <div class="row align-items-center my-4">
            <div class="col">
                <h2 class="h3 mb-0 page-title">Liste des emprunts</h2>
            </div>
            <a href="{{ url_for('add_emprunt') }}">
                <button type="button" class="btn btn-primary"><span class="fe fe-plus fe-12 mr-2"></span>Ajouter un
                    emprunt
                </button>
            </a>
            <button type="button" class="btn mb-2 btn-success"><span class="fe fe-play fe-12 mr-2"></span>Simulation
                d'emprunt
            </button>
        </div>
    </div>
    <div class="row my-4">
        <div class="col-md-12">
            <div class="card shadow">
                <div class="card-body">
                    <table class="table datatables" id="dataTable-1">
                        <thead>
                        <tr>
                            <th scope="col">Libelle</th>
                            <th scope="col">Capital début</th>
                            <th scope="col">Capital</th>
                            <th scope="col">Interet</th>
                            <th scope="col">Début</th>
                            <th scope="col">Periodicité</th>
                            <th scope="col">Echeance</th>
                            <th scope="col">Preteur</th>
                            <th scope="col">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for emprunt in emprunts %}
                            <tr>
                                <td>{{ emprunt['libelle'] }}</td>
                                <td>{{ emprunt['capital_depart'] }}</td>
                                <td>{{ emprunt['capital'] }}</td>
                                <td>{{ emprunt['interet'] }}</td>
                                <td>{{ emprunt['date'] }}</td>
                                <td>{{ emprunt['periodicite'] }}</td>
                                <td>{{ emprunt['echeance'] }}</td>
                                <td>{{ emprunt['preteur'] }}</td>
                                <td>
                                    <div class="dropdown">
                                            <button class="btn btn-sm dropdown-toggle" type="button" id="dr1"
                                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <span class="text-muted sr-only">Action</span>
                                            </button>
                                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dr1">
                                                <a class="dropdown-item" href="#">Modifier</a>
                                                <a class="dropdown-item-confirmation"
                                                   href="/emprunts/delete/{{ emprunt['id'] }}">Supprimer</a>
                                                <a href="/emprunts/delete/{{ emprunt['id'] }}"
                                                   onclick="return confirm('Confirmez-vous la suppression ?')"><i
                                                        class="fa fatrash-o text-danger"></i></a>
                                            </div>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    </div>
{% endblock %}